<Window x:Class="Readaloud_Epub3_Creator.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Settings" Height="auto" Width="500" WindowStartupLocation="CenterOwner"
        mc:Ignorable="d">

    <StackPanel Margin="20" VerticalAlignment="Top" >

        <TextBlock Text="Ebooks Folder Path" FontWeight="Bold"/>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="PathTextBox" Width="350" IsReadOnly="True"/>
            <Button Content="Browse" Click="Browse_Click" Margin="10,0,0,0"/>
        </StackPanel>

        <TextBlock Text="Device" FontWeight="Bold"/>
        <ComboBox x:Name="DeviceComboBox" Width="120" >
            <ComboBoxItem Content="cuda"/>
            <ComboBoxItem Content="cpu"/>
        </ComboBox>

        <TextBlock Text="Max Concurrent Transcriptions (only applies when device is set to 'cpu')" 
           FontWeight="Bold" 
           Margin="0,10,0,0" 
           TextWrapping="Wrap"/>
        <ui:NumberBox x:Name="MaxConcurrentNumberBox"
              Width="120"
              Minimum="1"
              Maximum="32"
              SpinButtonPlacementMode="Inline"
              HorizontalAlignment="Left"/>

        <TextBlock Text="Transcriber Python Executable Path" FontWeight="Bold" Margin="0,10,0,0"/>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="TranscriberPathTextBox" Width="350" IsReadOnly="True"/>
            <Button Content="Browse" Click="BrowseTranscriber_Click" Margin="10,0,0,0"/>
        </StackPanel>

        <CheckBox IsChecked="{Binding ShowDebugOptions}" Margin="0,10,0,0">
            <TextBlock Text="Show Debug Options" FontWeight="Bold"/>
        </CheckBox>





        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,20,10,10">
            <Button Content="Delete Settings" Click="DeleteSettings_Click" Margin="0,0,10,0"/>
            <Button Content="Save" Click="Save_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="Cancel_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
