<Window x:Class="Readaloud_Epub3_Creator.MoveBooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Move Selected Books" Height="200" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="10" VerticalAlignment="Center" >
        <TextBlock Text="Select Target Group:" Margin="0,0,0,5" FontWeight="Bold"/>
        <ComboBox x:Name="GroupsComboBox" Height="25" Margin="0,0,0,10" />

        <TextBlock Text="Or create new group:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox x:Name="NewGroupNameTextBox" Height="25" Margin="0,0,0,15" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="Ok_Click" />
            <Button Content="Cancel" Width="75" Click="Cancel_Click" />
        </StackPanel>
    </StackPanel>
</Window>
